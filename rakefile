SRCS = Dir.glob('src/**/*.cr')
EXES = Dir.glob('exe/*.cr')
BINS = EXES.map { |f| f.sub('.cr', '').sub('exe', 'bin') }

task default: %i[clean spec install]

BINS.each do |bin|
  task File.basename(bin) => :install do
    sh bin
  end
end

task :clean do
  sh 'rm -rfv tmp bin'
end

task :install do
	sh 'shards install'
	sh 'shards build'
end

task spec: :install do
	sh 'crystal spec -v'
end

task :fmt do
  (SRCS + EXES).each do |f|
	  sh "crystal tool format #{f}"
  end
end
task :lint => :fmt
