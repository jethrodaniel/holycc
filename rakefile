require 'rake/clean'

SRCS = Dir.glob('src/**/*.cr')
EXES = Dir.glob('exe/*.cr')
BINS = EXES.map { |f| f.sub('.cr', '').sub('exe', 'bin') }

task default: %i[spec install]

BINS.each do |bin|
  task File.basename(bin) => :install do
    sh bin
  end
end
CLEAN << BINS

task :install do
	sh 'shards install'
	sh 'shards build'
end

task spec: :install do
	sh 'crystal spec -v'
end

task :fmt do
  SRCS.each do |f|
	  sh "crystal tool format #{f}"
  end
end
